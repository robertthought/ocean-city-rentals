{
  "@context": "https://schema.org",
  "@type": "AboutPage",
  "name": "About OCNJ Weekly Rentals",
  "description": "Learn about Bob Idell Real Estate and Ocean City, NJ vacation rentals.",
  "url": "https://ocnjweeklyrentals.com/about",
  "mainEntity": {
    "@type": "RealEstateAgent",
    "name": "Bob Idell Real Estate",
    "description": "Your trusted Ocean City vacation rental expert since 2016",
    "areaServed": {
      "@type": "City",
