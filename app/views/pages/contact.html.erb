<% content_for :title, "Contact Us | Ocean City Rentals" %>
<% content_for :meta_description, "Contact Bob Idell Real Estate for Ocean City, NJ vacation rental inquiries. We're here to help you find your perfect beach house." %>

<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <div class="bg-white rounded-lg shadow-lg p-8">
      <h1 class="text-4xl font-bold text-gray-900 mb-6">Contact Us</h1>

      <div class="prose prose-lg max-w-none mb-8">
        <p class="text-xl text-gray-600">
          Have questions about a property or need help finding the perfect vacation rental?
          We're here to help!
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div>
          <h2 class="text-2xl font-bold text-gray-900 mb-4">Bob Idell Real Estate</h2>
          <div class="space-y-4 text-gray-600">
            <p>
              <strong class="text-gray-900">Email:</strong><br>
              <a href="mailto:info@bobidell.com" class="text-blue-600 hover:text-blue-800">info@bobidell.com</a>
            </p>
            <p>
              <strong class="text-gray-900">Location:</strong><br>
              Ocean City, New Jersey
            </p>
          </div>
        </div>

        <div class="bg-blue-50 rounded-lg p-6">
          <h3 class="text-xl font-bold text-gray-900 mb-4">Looking for a Specific Property?</h3>
          <p class="text-gray-600 mb-4">
            Browse our collection of <%= number_with_delimiter(Property.count) %> Ocean City
            properties and submit an inquiry directly from any property page.
          </p>
          <%= link_to "Browse Properties", properties_path,
            class: "inline-block px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-semibold" %>
        </div>
      </div>
    </div>
  </div>
</div>
