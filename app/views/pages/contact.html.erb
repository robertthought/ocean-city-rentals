<% content_for :title, "Contact Us | OCNJ Weekly Rentals" %>
<% content_for :meta_description, "Contact OCNJ Weekly Rentals for Ocean City, NJ vacation rental inquiries. We're here to help you find your perfect beach house." %>

<!-- Hero Section -->
<div class="bg-gradient-to-br from-blue-600 via-blue-700 to-cyan-600 text-white">
  <div class="container mx-auto px-4 py-16">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Contact Us</h1>
      <p class="text-xl text-blue-100">
        Have questions? We're here to help you find your perfect Ocean City vacation rental.
      </p>
    </div>
  </div>
</div>

<div class="bg-gray-50 py-16">
  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto">

      <div class="grid lg:grid-cols-3 gap-8">

        <!-- Contact Form -->
        <div class="lg:col-span-2">
          <div class="bg-white rounded-xl shadow-lg p-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Send Us a Message</h2>

            <%= form_with url: contact_path, method: :post, class: "space-y-6" do |f| %>

              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <%= f.label :name, "Your Name *", class: "block text-sm font-semibold text-gray-700 mb-2" %>
                  <%= f.text_field :name,
                    required: true,
                    value: params[:name],
                    placeholder: "John Smith",
                    class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
                  %>
                </div>

                <div>
                  <%= f.label :email, "Email Address *", class: "block text-sm font-semibold text-gray-700 mb-2" %>
                  <%= f.email_field :email,
                    required: true,
                    value: params[:email],
                    placeholder: "john@example.com",
                    class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
                  %>
                </div>
              </div>

              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <%= f.label :phone, "Phone Number", class: "block text-sm font-semibold text-gray-700 mb-2" %>
                  <%= f.telephone_field :phone,
                    value: params[:phone],
                    placeholder: "(609) 555-0123",
                    class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
                  %>
                </div>

                <div>
                  <%= f.label :inquiry_type, "Inquiry Type", class: "block text-sm font-semibold text-gray-700 mb-2" %>
                  <%= f.select :inquiry_type,
                    options_for_select([
                      ["General Inquiry", "General Inquiry"],
                      ["Rental Question", "Rental Question"],
                      ["List My Property", "List My Property"],
                      ["Booking Help", "Booking Help"],
                      ["Other", "Other"]
                    ], params[:inquiry_type]),
                    {},
                    class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
                  %>
                </div>
              </div>

              <div>
                <%= f.label :message, "Message *", class: "block text-sm font-semibold text-gray-700 mb-2" %>
                <%= f.text_area :message,
                  required: true,
                  rows: 6,
                  value: params[:message],
                  placeholder: "How can we help you? Tell us about what you're looking for...",
                  class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all resize-none"
                %>
              </div>

              <%= f.submit "Send Message",
                class: "w-full px-6 py-4 bg-blue-600 hover:bg-blue-700 text-white font-bold rounded-lg text-lg shadow-lg hover:shadow-xl transform hover:scale-[1.02] transition-all cursor-pointer"
              %>

              <p class="text-sm text-gray-500 text-center">
                We typically respond within 24 hours.
              </p>
            <% end %>
          </div>
        </div>

        <!-- Sidebar -->
        <div class="space-y-6">
          <!-- Contact Info -->
          <div class="bg-white rounded-xl shadow-lg p-8">
            <h3 class="text-xl font-bold text-gray-900 mb-6">Get in Touch</h3>

            <div class="space-y-4">
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div>
                  <p class="font-semibold text-gray-900">Email</p>
                  <a href="mailto:rentals@ocnjweeklyrentals.com" class="text-blue-600 hover:text-blue-700">
                    rentals@ocnjweeklyrentals.com
                  </a>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div>
                  <p class="font-semibold text-gray-900">Location</p>
                  <p class="text-gray-600">Ocean City, NJ 08226</p>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <div>
                  <p class="font-semibold text-gray-900">Response Time</p>
                  <p class="text-gray-600">Within 24 hours</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Browse Properties CTA -->
          <div class="bg-gradient-to-br from-blue-600 to-cyan-500 rounded-xl shadow-lg p-8 text-white">
            <h3 class="text-xl font-bold mb-4">Looking for a Property?</h3>
            <p class="text-blue-100 mb-6">
              Browse our collection of Ocean City vacation rentals and submit an inquiry directly from any property page.
            </p>
            <%= link_to "Browse Properties", properties_path,
              class: "inline-block w-full text-center px-6 py-3 bg-white text-blue-600 rounded-lg hover:bg-blue-50 font-semibold transition-colors"
            %>
          </div>

          <!-- By Idell Real Estate -->
          <div class="bg-gray-100 rounded-xl p-6 text-center">
            <p class="text-sm text-gray-500 mb-1">Powered by</p>
            <p class="font-bold text-gray-900">Idell Real Estate Team</p>
          </div>
        </div>

      </div>

    </div>
  </div>
</div>
