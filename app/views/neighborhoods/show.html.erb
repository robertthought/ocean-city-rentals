<% content_for :title, "#{@neighborhood.name} Ocean City NJ Vacation Rentals | OCNJ Weekly Rentals" %>
<% content_for :meta_description, "Browse #{number_with_delimiter(@neighborhood.property_count)} vacation rentals in #{@neighborhood.name}, Ocean City NJ (#{@neighborhood.street_range}). #{@neighborhood.description.truncate(120)}" %>
<% content_for :canonical_url, neighborhood_url(@neighborhood) %>

<% content_for :schema do %>
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "<%= j @neighborhood.name %> Ocean City NJ Vacation Rentals",
  "description": "Browse <%= @neighborhood.property_count %> vacation rentals in <%= j @neighborhood.name %>, Ocean City NJ",
  "url": "<%= neighborhood_url(@neighborhood) %>",
  "about": {
    "@type": "Place",
    "name": "<%= j @neighborhood.name %>, Ocean City",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "Ocean City",
      "addressRegion": "NJ",
      "addressCountry": "US"
    }
  },
  "breadcrumb": {
    "@type": "BreadcrumbList",
    "itemListElement": [
      { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://ocnjweeklyrentals.com" },
      { "@type": "ListItem", "position": 2, "name": "Neighborhoods", "item": "https://ocnjweeklyrentals.com/neighborhoods" },
      { "@type": "ListItem", "position": 3, "name": "<%= j @neighborhood.name %>" }
    ]
  },
  "numberOfItems": <%= @neighborhood.property_count %>
}
</script>
<% end %>

<!-- Hero Section -->
<div class="bg-gradient-to-br from-blue-600 via-blue-700 to-cyan-600 text-white">
  <div class="container mx-auto px-4 py-12">
    <div class="max-w-6xl mx-auto">
      <!-- Breadcrumb -->
      <nav class="mb-6">
        <ol class="flex items-center space-x-2 text-blue-200 text-sm">
          <li><%= link_to "Home", root_path, class: "hover:text-white" %></li>
          <li><span class="mx-2">/</span></li>
          <li><%= link_to "Neighborhoods", neighborhoods_path, class: "hover:text-white" %></li>
          <li><span class="mx-2">/</span></li>
          <li class="text-white font-medium"><%= @neighborhood.name %></li>
        </ol>
      </nav>

      <div class="grid md:grid-cols-2 gap-8 items-center">
        <div>
          <h1 class="text-4xl md:text-5xl font-bold mb-4">
            <%= @neighborhood.name %>
          </h1>
          <p class="text-xl text-blue-100 mb-2">
            <%= @neighborhood.street_range %>
          </p>
          <p class="text-3xl font-bold">
            <%= number_with_delimiter(@neighborhood.property_count) %> Vacation Rentals
          </p>
        </div>

        <div class="bg-white/10 backdrop-blur rounded-xl p-6">
          <h3 class="font-bold text-lg mb-4">Why Stay in <%= @neighborhood.name %>?</h3>
          <ul class="space-y-2">
            <% @neighborhood.highlights.each do |highlight| %>
              <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-cyan-300 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span><%= highlight %></span>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- About Neighborhood -->
<div class="bg-white border-b">
  <div class="container mx-auto px-4 py-8">
    <div class="max-w-6xl mx-auto">
      <div class="prose prose-lg max-w-none text-gray-600">
        <p><%= @neighborhood.description %></p>
      </div>
    </div>
  </div>
</div>

<!-- Properties Grid -->
<div class="bg-gray-50 py-12">
  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto">

      <!-- Results Header -->
      <div class="flex items-center justify-between mb-8">
        <h2 class="text-2xl font-bold text-gray-900">
          Available Rentals in <%= @neighborhood.name %>
        </h2>
        <p class="text-gray-600">
          Showing <%= @pagy.from %>-<%= @pagy.to %> of <%= number_with_delimiter(@pagy.count) %> properties
        </p>
      </div>

      <!-- Properties Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
        <% @properties.each do |property| %>
          <%= link_to property_path(property), class: "group" do %>
            <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition-all duration-300 h-full flex flex-col">
              <!-- Property Image Placeholder -->
              <div class="h-48 bg-gradient-to-br from-blue-400 via-cyan-400 to-blue-500 relative">
                <div class="absolute inset-0 flex items-center justify-center">
                  <svg class="w-16 h-16 text-white/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                  </svg>
                </div>
                <% if property.is_verified %>
                  <div class="absolute top-3 right-3 bg-green-500 text-white px-2 py-1 rounded-full text-xs font-bold">
                    Verified
                  </div>
                <% end %>
              </div>

              <div class="p-5 flex-1 flex flex-col">
                <h3 class="font-bold text-lg text-gray-900 group-hover:text-blue-600 transition-colors mb-1">
                  <%= property.address %>
                </h3>
                <p class="text-gray-500 text-sm mb-3">
                  <%= property.city %>, <%= property.state %> <%= property.zip %>
                </p>

                <div class="mt-auto pt-3 border-t border-gray-100 flex items-center justify-between">
                  <span class="text-blue-600 font-semibold text-sm group-hover:text-blue-700">
                    View Details
                  </span>
                  <svg class="w-5 h-5 text-blue-600 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>

      <!-- Pagination -->
      <div class="flex justify-center">
        <nav class="flex items-center gap-2">
          <% if @pagy.prev %>
            <%= link_to neighborhood_path(@neighborhood, page: @pagy.prev),
                class: "px-4 py-2 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors" do %>
              <span class="flex items-center gap-1">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
                Previous
              </span>
            <% end %>
          <% end %>

          <span class="px-4 py-2 text-gray-600">
            Page <%= @pagy.page %> of <%= @pagy.pages %>
          </span>

          <% if @pagy.next %>
            <%= link_to neighborhood_path(@neighborhood, page: @pagy.next),
                class: "px-4 py-2 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors" do %>
              <span class="flex items-center gap-1">
                Next
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </span>
            <% end %>
          <% end %>
        </nav>
      </div>

    </div>
  </div>
</div>

<!-- Other Neighborhoods -->
<div class="bg-white py-12">
  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Explore Other Neighborhoods</h2>

      <div class="grid md:grid-cols-4 gap-4">
        <% Neighborhood.all.reject { |n| n.slug == @neighborhood.slug }.each do |neighborhood| %>
          <%= link_to neighborhood_path(neighborhood),
              class: "block p-4 bg-gray-50 rounded-lg hover:bg-blue-50 hover:border-blue-200 border border-gray-200 transition-colors" do %>
            <h3 class="font-bold text-gray-900 mb-1"><%= neighborhood.name %></h3>
            <p class="text-sm text-gray-500"><%= neighborhood.street_range %></p>
            <p class="text-sm text-blue-600 mt-2"><%= number_with_delimiter(neighborhood.property_count) %> rentals</p>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- CTA Section -->
<div class="bg-blue-600 text-white py-12">
  <div class="container mx-auto px-4 text-center">
    <h2 class="text-3xl font-bold mb-4">Need Help Finding the Right Rental?</h2>
    <p class="text-blue-100 mb-6 max-w-2xl mx-auto">
      Bob Idell Real Estate knows <%= @neighborhood.name %> inside and out. Contact us for personalized
      recommendations and availability information.
    </p>
    <%= link_to "Contact Us", contact_path,
        class: "inline-flex items-center px-6 py-3 bg-white text-blue-600 font-semibold rounded-lg hover:bg-blue-50 transition-colors" %>
  </div>
</div>
