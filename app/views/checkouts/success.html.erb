<% content_for :title, "Welcome to OCNJ Weekly Rentals!" %>

<div class="bg-gray-50 min-h-screen py-16">
  <div class="container mx-auto px-4">
    <div class="max-w-lg mx-auto">

      <% if @error %>
        <div class="bg-white rounded-xl shadow-lg p-8 text-center">
          <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </div>
          <h1 class="text-2xl font-bold text-gray-900 mb-4">Something Went Wrong</h1>
          <p class="text-gray-600 mb-6"><%= @error %></p>
          <%= link_to "Contact Support", contact_path,
            class: "inline-block px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg transition-colors" %>
        </div>
      <% else %>
        <div class="bg-white rounded-xl shadow-lg overflow-hidden">
          <!-- Success Header -->
          <div class="bg-gradient-to-r from-green-500 to-emerald-500 px-6 py-8 text-white text-center">
            <div class="w-16 h-16 bg-white/20 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
            </div>
            <h1 class="text-2xl font-bold mb-2">Welcome to OCNJ Weekly Rentals!</h1>
            <p class="text-green-100">Your <%= @plan&.titleize %> subscription is now active</p>
          </div>

          <div class="p-6 space-y-6">
            <% if @new_user && @reset_token %>
              <!-- New User - Set Password -->
              <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                <h2 class="font-bold text-blue-900 mb-2">Set Your Password</h2>
                <p class="text-sm text-blue-700 mb-4">
                  We've created your account. Click below to set your password and access your owner dashboard.
                </p>
                <%= link_to "Set Password & Login", owner_reset_password_path(token: @reset_token),
                  class: "inline-block w-full text-center px-4 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg transition-colors" %>
              </div>
            <% else %>
              <!-- Existing User - Login -->
              <div class="bg-green-50 border border-green-200 rounded-lg p-4">
                <h2 class="font-bold text-green-900 mb-2">Subscription Upgraded!</h2>
                <p class="text-sm text-green-700 mb-4">
                  Your subscription has been upgraded to <%= @plan&.titleize %>. You now have access to all the features.
                </p>
                <%= link_to "Go to Owner Dashboard", owner_root_path,
                  class: "inline-block w-full text-center px-4 py-3 bg-green-600 hover:bg-green-700 text-white font-semibold rounded-lg transition-colors" %>
              </div>
            <% end %>

            <!-- What's Next -->
            <div>
              <h3 class="font-bold text-gray-900 mb-4">What's Next?</h3>
              <ul class="space-y-3">
                <li class="flex items-start gap-3">
                  <span class="flex-shrink-0 w-6 h-6 bg-blue-100 text-blue-600 rounded-full flex items-center justify-center text-sm font-bold">1</span>
                  <div>
                    <p class="font-semibold text-gray-900">Set up your account</p>
                    <p class="text-sm text-gray-500">Complete your profile and set your password</p>
                  </div>
                </li>
                <li class="flex items-start gap-3">
                  <span class="flex-shrink-0 w-6 h-6 bg-blue-100 text-blue-600 rounded-full flex items-center justify-center text-sm font-bold">2</span>
                  <div>
                    <p class="font-semibold text-gray-900">Add your property</p>
                    <p class="text-sm text-gray-500">List your vacation rental with photos and details</p>
                  </div>
                </li>
                <li class="flex items-start gap-3">
                  <span class="flex-shrink-0 w-6 h-6 bg-blue-100 text-blue-600 rounded-full flex items-center justify-center text-sm font-bold">3</span>
                  <div>
                    <p class="font-semibold text-gray-900">Start receiving inquiries</p>
                    <p class="text-sm text-gray-500">Connect with vacationers looking for rentals</p>
                  </div>
                </li>
              </ul>
            </div>

            <!-- Receipt Info -->
            <div class="border-t border-gray-200 pt-6">
              <p class="text-sm text-gray-500 text-center">
                A receipt has been sent to <strong><%= @session&.customer_email %></strong>
              </p>
            </div>
          </div>
        </div>

        <!-- Support -->
        <div class="mt-6 text-center">
          <p class="text-sm text-gray-500">
            Questions? <%= link_to "Contact our support team", contact_path, class: "text-blue-600 hover:text-blue-700" %>
          </p>
        </div>
      <% end %>

    </div>
  </div>
</div>
