<% content_for :title, "Checkout - #{@plan_details[:name]} Plan | OCNJ Weekly Rentals" %>

<div class="bg-gray-50 min-h-screen py-16">
  <div class="container mx-auto px-4">
    <div class="max-w-lg mx-auto">

      <!-- Back Link -->
      <div class="mb-6">
        <%= link_to pricing_path, class: "text-blue-600 hover:text-blue-700 font-semibold inline-flex items-center gap-1" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Back to Pricing
        <% end %>
      </div>

      <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <!-- Header -->
        <div class="bg-gradient-to-r from-blue-600 to-cyan-500 px-6 py-8 text-white text-center">
          <h1 class="text-2xl font-bold mb-2">Complete Your Purchase</h1>
          <p class="text-blue-100">You're signing up for the <%= @plan_details[:name] %> Plan</p>
        </div>

        <!-- Plan Summary -->
        <div class="px-6 py-6 border-b border-gray-200 bg-gray-50">
          <div class="flex items-center justify-between">
            <div>
              <h2 class="font-bold text-gray-900"><%= @plan_details[:name] %> Plan</h2>
              <p class="text-sm text-gray-500">Annual subscription</p>
            </div>
            <div class="text-right">
              <p class="text-2xl font-bold text-gray-900">$<%= @plan_details[:price_cents] / 100 %></p>
              <p class="text-sm text-gray-500">/year</p>
            </div>
          </div>
        </div>

        <!-- Form -->
        <div class="p-6">
          <%= form_with url: checkout_path(plan: @plan), method: :post, class: "space-y-6" do |f| %>

            <div class="grid grid-cols-2 gap-4">
              <div>
                <%= f.label :first_name, "First Name *", class: "block text-sm font-semibold text-gray-700 mb-2" %>
                <%= f.text_field :first_name,
                  required: true,
                  placeholder: "John",
                  class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
                %>
              </div>
              <div>
                <%= f.label :last_name, "Last Name *", class: "block text-sm font-semibold text-gray-700 mb-2" %>
                <%= f.text_field :last_name,
                  required: true,
                  placeholder: "Smith",
                  class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
                %>
              </div>
            </div>

            <div>
              <%= f.label :email, "Email Address *", class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= f.email_field :email,
                required: true,
                placeholder: "john@example.com",
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
              %>
              <p class="text-xs text-gray-500 mt-1">You'll use this email to log in to your owner portal</p>
            </div>

            <%= f.submit "Continue to Payment",
              class: "w-full px-6 py-4 bg-blue-600 hover:bg-blue-700 text-white font-bold rounded-lg text-lg shadow-lg hover:shadow-xl transform hover:scale-[1.02] transition-all cursor-pointer"
            %>

            <div class="flex items-center justify-center gap-4 text-xs text-gray-500">
              <span class="flex items-center gap-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                </svg>
                Secure checkout
              </span>
              <span>Powered by Stripe</span>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Features Reminder -->
      <div class="mt-8 bg-white rounded-xl shadow p-6">
        <h3 class="font-bold text-gray-900 mb-4">What's included in <%= @plan_details[:name] %>:</h3>
        <ul class="space-y-2 text-sm text-gray-600">
          <% if @plan == "starter" %>
            <li class="flex items-center gap-2">
              <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
              Up to 3 properties
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
              15 photos per property
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
              Full description & amenities
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
              Availability calendar
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
              Real-time email notifications
            </li>
          <% elsif @plan == "professional" %>
            <li class="flex items-center gap-2">
              <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
              Up to 10 properties
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
