<div class="max-w-4xl mx-auto">
  <div class="mb-6">
    <%= link_to admin_contact_submissions_path, class: "text-blue-600 hover:text-blue-700 font-semibold inline-flex items-center gap-1" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      Back to Submissions
    <% end %>
  </div>

  <div class="bg-white rounded-xl shadow overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
      <h1 class="text-2xl font-bold text-gray-900">Contact Submission</h1>
      <% if @submission.responded %>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
          Responded
        </span>
      <% else %>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-orange-100 text-orange-800">
          Awaiting Response
        </span>
      <% end %>
    </div>

    <div class="p-6 space-y-6">
      <!-- Contact Info -->
      <div class="grid md:grid-cols-2 gap-6">
        <div>
          <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-2">Contact Information</h3>
          <div class="space-y-3">
            <div>
              <p class="text-sm text-gray-500">Name</p>
              <p class="font-semibold text-gray-900"><%= @submission.name %></p>
            </div>
            <div>
              <p class="text-sm text-gray-500">Email</p>
              <p class="font-semibold text-gray-900">
                <a href="mailto:<%= @submission.email %>" class="text-blue-600 hover:text-blue-700">
                  <%= @submission.email %>
                </a>
              </p>
            </div>
            <% if @submission.phone.present? %>
              <div>
                <p class="text-sm text-gray-500">Phone</p>
                <p class="font-semibold text-gray-900">
                  <a href="tel:<%= @submission.phone %>" class="text-blue-600 hover:text-blue-700">
                    <%= @submission.phone %>
                  </a>
                </p>
              </div>
            <% end %>
          </div>
        </div>

        <div>
          <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-2">Details</h3>
          <div class="space-y-3">
            <div>
              <p class="text-sm text-gray-500">Inquiry Type</p>
              <p class="font-semibold text-gray-900"><%= @submission.inquiry_type.presence || "General Inquiry" %></p>
            </div>
            <div>
              <p class="text-sm text-gray-500">Submitted</p>
              <p class="font-semibold text-gray-900"><%= @submission.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
            </div>
            <% if @submission.responded_at.present? %>
              <div>
                <p class="text-sm text-gray-500">Responded</p>
                <p class="font-semibold text-gray-900"><%= @submission.responded_at.strftime("%B %d, %Y at %I:%M %p") %></p>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Message -->
      <div>
        <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-2">Message</h3>
        <div class="bg-gray-50 rounded-lg p-4">
          <p class="text-gray-900 whitespace-pre-wrap"><%= @submission.message %></p>
        </div>
      </div>

      <!-- Actions -->
      <div class="pt-4 border-t border-gray-200 flex items-center gap-4">
        <a href="mailto:<%= @submission.email %>?subject=Re: <%= @submission.inquiry_type.presence || 'Your Inquiry' %> - OCNJ Weekly Rentals"
          class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-semibold inline-flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
          Reply via Email
        </a>
        <% if @submission.phone.present? %>
          <a href="tel:<%= @submission.phone %>"
            class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 font-semibold inline-flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            Call
          </a>
        <% end %>
        <% unless @submission.responded %>
          <%= button_to mark_responded_admin_contact_submission_path(@submission),
            method: :post,
            class: "px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 font-semibold inline-flex items-center gap-2" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            Mark as Responded
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
