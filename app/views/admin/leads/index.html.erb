<div class="max-w-7xl mx-auto">
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Leads</h1>
    <div class="flex items-center gap-4">
      <%= link_to export_admin_leads_path(format: :csv),
        class: "px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors font-semibold" do %>
        <svg class="w-5 h-5 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        Export CSV
      <% end %>
    </div>
  </div>

  <!-- Filters -->
  <div class="bg-white rounded-xl shadow mb-6 p-4">
    <div class="flex items-center gap-4">
      <span class="text-sm text-gray-500">Filter:</span>
      <%= link_to "All", admin_leads_path,
        class: "px-3 py-1.5 rounded-lg text-sm font-semibold #{params[:status].blank? ? 'bg-blue-100 text-blue-700' : 'text-gray-600 hover:bg-gray-100'}" %>
      <%= link_to "Uncontacted", admin_leads_path(status: "uncontacted"),
        class: "px-3 py-1.5 rounded-lg text-sm font-semibold #{params[:status] == 'uncontacted' ? 'bg-orange-100 text-orange-700' : 'text-gray-600 hover:bg-gray-100'}" %>
      <%= link_to "Contacted", admin_leads_path(status: "contacted"),
        class: "px-3 py-1.5 rounded-lg text-sm font-semibold #{params[:status] == 'contacted' ? 'bg-green-100 text-green-700' : 'text-gray-600 hover:bg-gray-100'}" %>
    </div>
  </div>

  <!-- Leads Table -->
  <div class="bg-white rounded-xl shadow overflow-hidden">
    <% if @leads.any? %>
      <table class="w-full">
        <thead class="bg-gray-50 border-b border-gray-200">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Contact</th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Property</th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Message</th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Date</th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-right text-xs font-semibold text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% @leads.each do |lead| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4">
                <div class="font-semibold text-gray-900"><%= lead.name %></div>
                <div class="text-sm text-gray-500"><%= lead.email %></div>
                <% if lead.phone.present? %>
                  <div class="text-sm text-gray-500"><%= lead.phone %></div>
                <% end %>
              </td>
              <td class="px-6 py-4">
                <%= link_to lead.property.address, property_path(lead.property),
                  target: "_blank",
                  class: "text-blue-600 hover:text-blue-700 font-medium" %>
              </td>
              <td class="px-6 py-4 max-w-xs">
                <% if lead.message.present? %>
                  <p class="text-sm text-gray-600 truncate" title="<%= lead.message %>">
                    <%= truncate(lead.message, length: 50) %>
                  </p>
                <% else %>
                  <span class="text-gray-400 text-sm">No message</span>
                <% end %>
              </td>
              <td class="px-6 py-4 text-sm text-gray-500">
                <div><%= lead.created_at.strftime("%b %d, %Y") %></div>
                <div class="text-xs"><%= lead.created_at.strftime("%I:%M %p") %></div>
              </td>
              <td class="px-6 py-4">
                <% if lead.contacted %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    Contacted
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-orange-100 text-orange-800">
                    New
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4 text-right">
                <div class="flex items-center justify-end gap-2">
                  <a href="mailto:<%= lead.email %>" class="p-2 text-gray-400 hover:text-blue-600 hover:bg-blue-50 rounded" title="Email">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                  </a>
                  <% if lead.phone.present? %>
                    <a href="tel:<%= lead.phone %>" class="p-2 text-gray-400 hover:text-green-600 hover:bg-green-50 rounded" title="Call">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                      </svg>
                    </a>
                  <% end %>
                  <% unless lead.contacted %>
                    <%= button_to mark_contacted_admin_lead_path(lead),
                      method: :post,
                      class: "p-2 text-gray-400 hover:text-green-600 hover:bg-green-50 rounded",
                      title: "Mark as Contacted" do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                      </svg>
                    <% end %>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <!-- Pagination -->
      <div class="px-6 py-4 border-t border-gray-200 flex items-center justify-between">
        <p class="text-sm text-gray-500">
          Showing <%= @pagy.from %>-<%= @pagy.to %> of <%= number_with_delimiter(@pagy.count) %> leads
        </p>
        <nav class="flex items-center gap-2">
          <% if @pagy.prev %>
            <%= link_to admin_leads_path(page: @pagy.prev, status: params[:status]),
                class: "px-3 py-1.5 bg-white border border-gray-300 rounded hover:bg-gray-50 text-sm" do %>
              Previous
            <% end %>
          <% end %>
          <% if @pagy.next %>
            <%= link_to admin_leads_path(page: @pagy.next, status: params[:status]),
                class: "px-3 py-1.5 bg-white border border-gray-300 rounded hover:bg-gray-50 text-sm" do %>
              Next
            <% end %>
          <% end %>
        </nav>
      </div>
    <% else %>
      <div class="px-6 py-12 text-center text-gray-500">
        <svg class="w-12 h-12 mx-auto mb-4 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
        </svg>
        <p>No leads found</p>
      </div>
    <% end %>
  </div>
</div>
