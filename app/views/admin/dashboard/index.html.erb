<div class="max-w-7xl mx-auto">
  <h1 class="text-3xl font-bold text-gray-900 mb-8">Dashboard</h1>

  <% if @pending_claims > 0 %>
    <!-- Pending Claims Alert -->
    <div class="bg-yellow-50 border border-yellow-200 rounded-xl p-4 mb-6 flex items-center justify-between">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 bg-yellow-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div>
          <p class="font-semibold text-yellow-800"><%= pluralize(@pending_claims, "ownership claim") %> pending review</p>
          <p class="text-sm text-yellow-700">Property owners are waiting for approval</p>
        </div>
      </div>
      <%= link_to "Review Claims", admin_ownership_claims_path, class: "px-4 py-2 bg-yellow-600 hover:bg-yellow-700 text-white font-bold rounded-lg" %>
    </div>
  <% end %>

  <!-- Stats Grid -->
  <div class="grid md:grid-cols-4 gap-6 mb-8">
    <!-- Leads Today -->
    <div class="bg-white rounded-xl shadow p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-500 mb-1">Leads Today</p>
          <p class="text-3xl font-bold text-gray-900"><%= @leads_today %></p>
        </div>
        <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>
    </div>

    <!-- Leads This Week -->
    <div class="bg-white rounded-xl shadow p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-500 mb-1">This Week</p>
          <p class="text-3xl font-bold text-gray-900"><%= @leads_this_week %></p>
        </div>
        <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
          </svg>
        </div>
      </div>
    </div>

    <!-- Leads This Month -->
    <div class="bg-white rounded-xl shadow p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-500 mb-1">This Month</p>
          <p class="text-3xl font-bold text-gray-900"><%= @leads_this_month %></p>
        </div>
        <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
        </div>
      </div>
    </div>

    <!-- Uncontacted -->
    <div class="bg-white rounded-xl shadow p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-500 mb-1">Needs Follow-up</p>
          <p class="text-3xl font-bold <%= @uncontacted_leads > 0 ? 'text-orange-600' : 'text-gray-900' %>">
            <%= @uncontacted_leads %>
          </p>
        </div>
        <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <div class="grid lg:grid-cols-3 gap-8">
    <!-- Recent Leads -->
    <div class="lg:col-span-2">
      <div class="bg-white rounded-xl shadow">
        <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
          <h2 class="text-lg font-bold text-gray-900">Recent Leads</h2>
          <%= link_to "View All", admin_leads_path, class: "text-blue-600 hover:text-blue-700 text-sm font-semibold" %>
        </div>

        <% if @recent_leads.any? %>
          <div class="divide-y divide-gray-200">
            <% @recent_leads.each do |lead| %>
              <div class="px-6 py-4 hover:bg-gray-50">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <div class="flex items-center gap-2 mb-1">
                      <span class="font-semibold text-gray-900"><%= lead.name %></span>
                      <% unless lead.contacted %>
                        <span class="bg-orange-100 text-orange-700 text-xs px-2 py-0.5 rounded-full">New</span>
                      <% end %>
                    </div>
                    <p class="text-sm text-gray-600 mb-1"><%= lead.property.address %></p>
                    <p class="text-xs text-gray-400"><%= time_ago_in_words(lead.created_at) %> ago</p>
                  </div>
                  <div class="flex items-center gap-2">
                    <a href="mailto:<%= lead.email %>" class="p-2 text-gray-400 hover:text-blue-600 hover:bg-blue-50 rounded">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                      </svg>
                    </a>
                    <% if lead.phone.present? %>
                      <a href="tel:<%= lead.phone %>" class="p-2 text-gray-400 hover:text-green-600 hover:bg-green-50 rounded">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                        </svg>
                      </a>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="px-6 py-12 text-center text-gray-500">
            <svg class="w-12 h-12 mx-auto mb-4 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
            </svg>
            <p>No leads yet</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Property Stats -->
      <div class="bg-white rounded-xl shadow p-6">
        <h2 class="text-lg font-bold text-gray-900 mb-4">Properties</h2>
        <div class="space-y-4">
          <div class="flex items-center justify-between">
            <span class="text-gray-600">Total Properties</span>
            <span class="font-bold text-gray-900"><%= number_with_delimiter(@properties_count) %></span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-gray-600">Verified</span>
            <span class="font-bold text-green-600"><%= number_with_delimiter(@verified_count) %></span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-gray-600">Total Leads</span>
            <span class="font-bold text-blue-600"><%= number_with_delimiter(@leads_total) %></span>
          </div>
        </div>
      </div>

      <!-- Top Properties -->
      <% if @top_properties.any? %>
        <div class="bg-white rounded-xl shadow p-6">
          <h2 class="text-lg font-bold text-gray-900 mb-4">Top Properties</h2>
          <div class="space-y-3">
            <% @top_properties.each do |property| %>
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-600 truncate flex-1 mr-2"><%= property.address %></span>
                <span class="bg-blue-100 text-blue-700 text-xs px-2 py-1 rounded-full">
                  <%= property.leads_count %> leads
                </span>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Contact Submissions -->
      <div class="bg-white rounded-xl shadow p-6">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-lg font-bold text-gray-900">Contact Form</h2>
          <%= link_to "View All", admin_contact_submissions_path, class: "text-blue-600 hover:text-blue-700 text-sm font-semibold" %>
        </div>
        <div class="space-y-4 mb-4">
          <div class="flex items-center justify-between">
            <span class="text-gray-600">Total Submissions</span>
            <span class="font-bold text-gray-900"><%= number_with_delimiter(@contact_submissions_total) %></span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-gray-600">Awaiting Response</span>
            <span class="font-bold <%= @unanswered_submissions > 0 ? 'text-orange-600' : 'text-gray-900' %>">
              <%= number_with_delimiter(@unanswered_submissions) %>
            </span>
          </div>
        </div>
        <% if @recent_submissions.any? %>
          <div class="border-t border-gray-200 pt-4 space-y-2">
            <p class="text-xs text-gray-500 uppercase font-semibold">Recent</p>
            <% @recent_submissions.each do |submission| %>
              <div class="flex items-center justify-between text-sm">
                <span class="text-gray-600 truncate flex-1 mr-2"><%= submission.name %></span>
                <% unless submission.responded %>
                  <span class="bg-orange-100 text-orange-700 text-xs px-2 py-0.5 rounded-full">New</span>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>

      <!-- Quick Actions -->
      <div class="bg-white rounded-xl shadow p-6">
        <h2 class="text-lg font-bold text-gray-900 mb-4">Quick Actions</h2>
        <div class="space-y-2">
          <%= link_to admin_leads_path(status: "uncontacted"),
            class: "block w-full px-4 py-2 bg-orange-50 text-orange-700 rounded-lg hover:bg-orange-100 transition-colors text-center font-semibold" do %>
            View Uncontacted Leads (<%= @uncontacted_leads %>)
          <% end %>
          <% if @unanswered_submissions > 0 %>
            <%= link_to admin_contact_submissions_path(status: "unanswered"),
              class: "block w-full px-4 py-2 bg-purple-50 text-purple-700 rounded-lg hover:bg-purple-100 transition-colors text-center font-semibold" do %>
              View Unanswered Contacts (<%= @unanswered_submissions %>)
            <% end %>
          <% end %>
          <%= link_to export_admin_leads_path(format: :csv),
            class: "block w-full px-4 py-2 bg-gray-50 text-gray-700 rounded-lg hover:bg-gray-100 transition-colors text-center font-semibold" do %>
            Export Leads to CSV
          <% end %>
          <%= link_to admin_ownership_claims_path,
            class: "block w-full px-4 py-2 bg-gray-50 text-gray-700 rounded-lg hover:bg-gray-100 transition-colors text-center font-semibold" do %>
            Manage Ownership Claims
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
