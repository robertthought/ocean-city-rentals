<div class="max-w-7xl mx-auto">
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Property Analytics</h1>

    <!-- Period Filter -->
    <div class="flex items-center gap-2">
      <span class="text-sm text-gray-500">Period:</span>
      <div class="flex bg-white rounded-lg shadow border border-gray-200 overflow-hidden">
        <%= link_to "7 Days", admin_analytics_path(period: 7),
          class: "px-4 py-2 text-sm font-medium #{@period == '7' ? 'bg-blue-600 text-white' : 'text-gray-700 hover:bg-gray-50'}" %>
        <%= link_to "30 Days", admin_analytics_path(period: 30),
          class: "px-4 py-2 text-sm font-medium #{@period == '30' ? 'bg-blue-600 text-white' : 'text-gray-700 hover:bg-gray-50'}" %>
        <%= link_to "90 Days", admin_analytics_path(period: 90),
          class: "px-4 py-2 text-sm font-medium #{@period == '90' ? 'bg-blue-600 text-white' : 'text-gray-700 hover:bg-gray-50'}" %>
      </div>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="grid md:grid-cols-3 gap-6 mb-8">
    <div class="bg-white rounded-xl shadow p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-500 mb-1">Page Views</p>
          <p class="text-3xl font-bold text-gray-900"><%= number_with_delimiter(@total_views) %></p>
          <p class="text-xs text-gray-400 mt-1">Last <%= @period %> days</p>
        </div>
        <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-xl shadow p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-500 mb-1">Search Impressions</p>
          <p class="text-3xl font-bold text-gray-900"><%= number_with_delimiter(@total_impressions) %></p>
          <p class="text-xs text-gray-400 mt-1">Last <%= @period %> days</p>
        </div>
        <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-xl shadow p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-500 mb-1">Unique Visitors</p>
          <p class="text-3xl font-bold text-gray-900"><%= number_with_delimiter(@total_unique_visitors) %></p>
          <p class="text-xs text-gray-400 mt-1">Last <%= @period %> days</p>
        </div>
        <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Daily Views Chart (Simple bar representation) -->
  <% if @daily_views.any? %>
    <div class="bg-white rounded-xl shadow p-6 mb-8">
      <h2 class="text-lg font-bold text-gray-900 mb-4">Daily Page Views</h2>
      <div class="flex items-end gap-1 h-32">
        <% max_views = @daily_views.values.max || 1 %>
        <% @daily_views.each do |date, views| %>
          <div class="flex-1 group relative">
            <div class="bg-blue-500 hover:bg-blue-600 rounded-t transition-colors"
                 style="height: <%= (views.to_f / max_views * 100).round %>%;"
                 title="<%= date.strftime('%b %d') %>: <%= number_with_delimiter(views) %> views">
            </div>
            <div class="hidden group-hover:block absolute bottom-full left-1/2 transform -translate-x-1/2 mb-2 px-2 py-1 bg-gray-900 text-white text-xs rounded whitespace-nowrap z-10">
              <%= date.strftime('%b %d') %>: <%= number_with_delimiter(views) %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="flex justify-between mt-2 text-xs text-gray-500">
        <span><%= @start_date.strftime('%b %d') %></span>
        <span><%= @end_date.strftime('%b %d') %></span>
      </div>
    </div>
  <% end %>

  <!-- Top Properties Table -->
  <div class="bg-white rounded-xl shadow overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-bold text-gray-900">Top Properties by Views</h2>
      <p class="text-sm text-gray-500">Properties with the most page views in the last <%= @period %> days</p>
    </div>

    <% if @top_properties.any? %>
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Rank</th>
              <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Property</th>
              <th class="px-6 py-3 text-right text-xs font-semibold text-gray-500 uppercase tracking-wider">Page Views</th>
              <th class="px-6 py-3 text-right text-xs font-semibold text-gray-500 uppercase tracking-wider">Impressions</th>
              <th class="px-6 py-3 text-right text-xs font-semibold text-gray-500 uppercase tracking-wider">Unique Visitors</th>
              <th class="px-6 py-3 text-right text-xs font-semibold text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% @top_properties.each_with_index do |property, index| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if index < 3 %>
                    <span class="inline-flex items-center justify-center w-8 h-8 rounded-full <%= index == 0 ? 'bg-yellow-100 text-yellow-700' : index == 1 ? 'bg-gray-100 text-gray-700' : 'bg-orange-100 text-orange-700' %> font-bold text-sm">
                      <%= index + 1 %>
                    </span>
                  <% else %>
                    <span class="text-gray-500 pl-3"><%= index + 1 %></span>
                  <% end %>
                </td>
                <td class="px-6 py-4">
                  <div class="flex items-center gap-3">
                    <% if property.primary_photo_url %>
                      <img src="<%= property.primary_photo_url %>" alt="" class="w-12 h-12 rounded-lg object-cover">
                    <% else %>
                      <div class="w-12 h-12 bg-gray-200 rounded-lg flex items-center justify-center">
                        <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                        </svg>
                      </div>
                    <% end %>
                    <div>
                      <p class="font-semibold text-gray-900"><%= property.address %></p>
                      <p class="text-sm text-gray-500"><%= property.city %>, <%= property.state %></p>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right">
                  <span class="font-semibold text-gray-900"><%= number_with_delimiter(property.total_views.to_i) %></span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-gray-600">
                  <%= number_with_delimiter(property.total_impressions.to_i) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-gray-600">
                  <%= number_with_delimiter(property.total_unique_visitors.to_i) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right">
                  <%= link_to property_path(property), target: "_blank", class: "text-blue-600 hover:text-blue-700 text-sm font-medium" do %>
                    View
                    <svg class="w-4 h-4 inline-block ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                    </svg>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="px-6 py-12 text-center text-gray-500">
        <svg class="w-12 h-12 mx-auto mb-4 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
        </svg>
        <p class="font-medium text-gray-900 mb-1">No analytics data yet</p>
        <p class="text-sm">Property view data will appear here as visitors browse listings.</p>
      </div>
    <% end %>
  </div>
</div>
