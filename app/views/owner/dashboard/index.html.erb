<h1 class="text-3xl font-bold text-gray-900 mb-8">Welcome, <%= current_owner.first_name %>!</h1>

<!-- Stats Cards -->
<div class="grid md:grid-cols-3 gap-6 mb-8">
  <div class="bg-white rounded-xl shadow p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm text-gray-500">My Properties</p>
        <p class="text-3xl font-bold text-gray-900"><%= @properties.count %></p>
      </div>
      <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
        </svg>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-xl shadow p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm text-gray-500">Page Views (30 days)</p>
        <p class="text-3xl font-bold text-gray-900"><%= number_with_delimiter(@total_views_30d) %></p>
      </div>
      <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
        </svg>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-xl shadow p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm text-gray-500">Search Impressions (30 days)</p>
        <p class="text-3xl font-bold text-gray-900"><%= number_with_delimiter(@total_impressions_30d) %></p>
      </div>
      <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
      </div>
    </div>
  </div>
</div>

<!-- Pending Claims Alert -->
<% if @pending_claims.any? %>
  <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-8 rounded-r-lg">
    <div class="flex items-start">
      <svg class="w-5 h-5 text-yellow-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <div class="ml-3">
        <h3 class="font-semibold text-yellow-800">Pending Claims</h3>
        <p class="text-yellow-700 text-sm mt-1">
          You have <%= pluralize(@pending_claims.count, 'claim') %> awaiting review:
        </p>
        <ul class="mt-2 text-yellow-700 text-sm">
          <% @pending_claims.each do |claim| %>
            <li>&bull; <%= claim.property.address %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>

<!-- Properties List -->
<div class="bg-white rounded-xl shadow">
  <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
    <h2 class="text-lg font-bold text-gray-900">Your Properties</h2>
    <%= link_to new_owner_claim_path, class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg text-sm transition-colors" do %>
      + Claim Property
    <% end %>
  </div>

  <% if @properties.any? %>
    <div class="divide-y divide-gray-200">
      <% @properties.each do |property| %>
        <div class="px-6 py-4 hover:bg-gray-50 transition-colors">
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-4">
              <% if property.has_photos? %>
                <img src="<%= property.primary_photo_url %>" alt="" class="w-16 h-16 rounded-lg object-cover">
              <% else %>
                <div class="w-16 h-16 rounded-lg bg-gray-200 flex items-center justify-center">
                  <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                  </svg>
                </div>
              <% end %>
              <div>
                <p class="font-semibold text-gray-900"><%= property.address %></p>
                <p class="text-sm text-gray-500"><%= property.city %>, <%= property.state %> <%= property.zip %></p>
              </div>
            </div>
            <div class="flex items-center gap-2">
              <%= link_to analytics_owner_property_path(property),
                class: "px-3 py-1.5 bg-purple-100 text-purple-700 rounded-lg text-sm font-medium hover:bg-purple-200 transition-colors" do %>
                Analytics
              <% end %>
              <%= link_to edit_owner_property_path(property),
                class: "px-3 py-1.5 bg-gray-100 text-gray-700 rounded-lg text-sm font-medium hover:bg-gray-200 transition-colors" do %>
                Edit
              <% end %>
              <%= link_to property_path(property), target: "_blank",
                class: "px-3 py-1.5 bg-blue-100 text-blue-700 rounded-lg text-sm font-medium hover:bg-blue-200 transition-colors" do %>
                View
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="px-6 py-12 text-center">
      <svg class="w-12 h-12 mx-auto mb-4 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
      </svg>
      <p class="text-gray-600 mb-4">You don't have any approved properties yet.</p>
      <%= link_to "Claim Your Property", new_owner_claim_path,
        class: "inline-block px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-bold rounded-lg transition-colors" %>
    </div>
  <% end %>
</div>
