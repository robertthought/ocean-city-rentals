<h1 class="text-2xl font-bold text-gray-900 mb-2 text-center">Reset Password</h1>
<p class="text-gray-600 text-center mb-6">Enter your email and we'll send you reset instructions</p>

<%= form_with url: owner_forgot_password_path, method: :post, class: "space-y-4" do |f| %>
  <div>
    <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
    <%= f.email_field :email,
      autofocus: true,
      autocomplete: "email",
      required: true,
      class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <%= f.submit "Send Reset Instructions",
    class: "w-full px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-bold rounded-lg transition-colors cursor-pointer" %>
<% end %>

<div class="mt-6 pt-6 border-t border-gray-200 text-center">
  <p class="text-gray-600">
    Remember your password?
    <%= link_to "Sign In", owner_login_path, class: "text-blue-600 hover:text-blue-700 font-semibold" %>
  </p>
</div>
