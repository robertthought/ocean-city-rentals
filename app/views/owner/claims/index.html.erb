<div class="flex items-center justify-between mb-8">
  <h1 class="text-3xl font-bold text-gray-900">My Claims</h1>
  <%= link_to new_owner_claim_path, class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg transition-colors" do %>
    + Claim Property
  <% end %>
</div>

<div class="bg-white rounded-xl shadow">
  <% if @claims.any? %>
    <div class="divide-y divide-gray-200">
      <% @claims.each do |claim| %>
        <div class="px-6 py-4">
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-4">
              <% if claim.property.has_photos? %>
                <img src="<%= claim.property.primary_photo_url %>" alt="" class="w-16 h-16 rounded-lg object-cover">
              <% else %>
                <div class="w-16 h-16 rounded-lg bg-gray-200 flex items-center justify-center">
                  <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                  </svg>
                </div>
              <% end %>
              <div>
                <p class="font-semibold text-gray-900"><%= claim.property.address %></p>
                <p class="text-sm text-gray-500"><%= claim.property.city %>, <%= claim.property.state %></p>
                <p class="text-xs text-gray-400 mt-1">Submitted <%= time_ago_in_words(claim.created_at) %> ago</p>
              </div>
            </div>
            <div>
              <% case claim.status %>
              <% when 'pending' %>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  Pending Review
                </span>
              <% when 'approved' %>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  Approved
                </span>
              <% when 'rejected' %>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-100 text-red-800">
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                  </svg>
                  Rejected
                </span>
              <% end %>
            </div>
          </div>

          <% if claim.admin_notes.present? %>
            <div class="mt-3 p-3 bg-gray-50 rounded-lg text-sm">
              <p class="font-medium text-gray-700">Admin Notes:</p>
              <p class="text-gray-600"><%= claim.admin_notes %></p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="px-6 py-12 text-center">
      <svg class="w-12 h-12 mx-auto mb-4 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
      </svg>
      <p class="text-gray-600 mb-4">You haven't submitted any claims yet.</p>
      <%= link_to "Claim Your First Property", new_owner_claim_path,
        class: "inline-block px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-bold rounded-lg transition-colors" %>
    </div>
  <% end %>
</div>
