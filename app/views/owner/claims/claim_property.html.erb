<div class="min-h-screen bg-gray-50 py-12">
  <div class="max-w-2xl mx-auto px-4">

    <!-- Property Card -->
    <div class="bg-white rounded-xl shadow-lg overflow-hidden mb-8">
      <div class="flex items-center gap-4 p-6">
        <% if @property.has_photos? %>
          <img src="<%= @property.primary_photo_url %>" alt="" class="w-24 h-24 rounded-lg object-cover">
        <% else %>
          <div class="w-24 h-24 rounded-lg bg-gradient-to-br from-blue-400 to-blue-600 flex items-center justify-center">
            <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
          </div>
        <% end %>
        <div>
          <p class="text-sm text-purple-600 font-semibold mb-1">Claim This Property</p>
          <h1 class="text-2xl font-bold text-gray-900"><%= @property.address %></h1>
          <p class="text-gray-600"><%= @property.city %>, <%= @property.state %> <%= @property.zip %></p>
        </div>
      </div>
    </div>

    <!-- Registration/Login Card -->
    <div class="bg-white rounded-xl shadow-lg p-8">
      <h2 class="text-xl font-bold text-gray-900 mb-2">Create Your Owner Account</h2>
      <p class="text-gray-600 mb-6">Sign up to claim this property and start managing your listing on OCNJ Weekly Rentals.</p>

      <%= form_with url: owner_claim_property_path(@property), method: :post, class: "space-y-4" do |f| %>
        <div class="grid sm:grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">First Name</label>
            <%= f.text_field :first_name, required: true, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Last Name</label>
            <%= f.text_field :last_name, required: true, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
          <%= f.email_field :email, required: true, autocomplete: "email", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
          <%= f.password_field :password, required: true, minlength: 8, autocomplete: "new-password", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          <p class="text-xs text-gray-500 mt-1">Minimum 8 characters</p>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">How can we verify you own this property?</label>
          <%= f.text_area :verification_notes, required: true, rows: 3, placeholder: "e.g., I am John Smith, listed as the property owner. You can verify via the tax records.", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          <p class="text-xs text-gray-500 mt-1">We'll review this to verify ownership before approving your claim.</p>
        </div>

        <button type="submit" class="w-full px-6 py-4 bg-purple-600 hover:bg-purple-700 text-white font-bold rounded-xl text-lg transition-colors cursor-pointer shadow-lg">
          Create Account & Claim Property
        </button>
      <% end %>

      <div class="mt-6 pt-6 border-t border-gray-200 text-center">
        <p class="text-gray-600">
          Already have an account?
          <%= link_to "Sign in", owner_login_path(return_to: new_owner_claim_path(property_id: @property.id)), class: "text-blue-600 hover:text-blue-700 font-semibold" %>
        </p>
      </div>
    </div>

    <!-- Benefits -->
    <div class="mt-8 bg-purple-50 rounded-xl p-6">
      <h3 class="font-semibold text-purple-900 mb-3">What you get as a verified owner:</h3>
      <ul class="space-y-2 text-purple-800">
        <li class="flex items-center gap-2">
          <svg class="w-5 h-5 text-purple-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
          View page analytics and search impressions
        </li>
        <li class="flex items-center gap-2">
          <svg class="w-5 h-5 text-purple-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
          Edit your listing description
        </li>
        <li class="flex items-center gap-2">
          <svg class="w-5 h-5 text-purple-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
          Upload additional photos
        </li>
        <li class="flex items-center gap-2">
          <svg class="w-5 h-5 text-purple-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
          Get more rental inquiries
        </li>
        <li class="flex items-center gap-2">
          <svg class="w-5 h-5 text-purple-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
          Request to remove your listing from the site
        </li>
      </ul>
    </div>

  </div>
</div>
