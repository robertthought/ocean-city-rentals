<% content_for :title, "Advanced Search - Ocean City Vacation Rentals" %>
<% content_for :meta_description, "Search Ocean City, NJ vacation rentals by date availability, price, bedrooms, and more. Find your perfect weekly rental with our advanced search tools." %>

<!-- Advanced Search Header -->
<div class="bg-gradient-to-r from-blue-600 to-cyan-500 text-white py-8 sm:py-12">
  <div class="container mx-auto px-4">
    <div class="max-w-7xl mx-auto">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
          <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold mb-2">
            Advanced Search
          </h1>
          <p class="text-blue-100 text-lg">
            Find your perfect Ocean City rental with detailed search options
          </p>
        </div>
        <%= link_to properties_path, class: "inline-flex items-center gap-2 text-white/80 hover:text-white transition-colors" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Back to Home
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Search Form Section -->
<div class="bg-white py-8 border-b border-gray-200">
  <div class="container mx-auto px-4">
    <div class="max-w-7xl mx-auto">
      <%= render "search_form", expanded: true %>
    </div>
  </div>
</div>

<!-- Search Results Section -->
<div class="bg-gray-50 py-8 sm:py-12 min-h-[400px]">
  <div class="container mx-auto px-4">
    <%= render "search_results" %>
  </div>
</div>

<!-- Tips Section -->
<div class="bg-white py-12 border-t border-gray-200">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-xl font-bold text-gray-900 mb-6">Search Tips</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="flex gap-4">
          <div class="flex-shrink-0">
            <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
          </div>
          <div>
            <h3 class="font-semibold text-gray-900 mb-1">Date Search</h3>
            <p class="text-gray-600 text-sm">Select check-in and check-out dates to see only properties available for your vacation week.</p>
          </div>
        </div>
        <div class="flex gap-4">
          <div class="flex-shrink-0">
            <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
          </div>
          <div>
            <h3 class="font-semibold text-gray-900 mb-1">Price Range</h3>
            <p class="text-gray-600 text-sm">Filter by weekly rental price to find properties within your budget.</p>
          </div>
        </div>
        <div class="flex gap-4">
          <div class="flex-shrink-0">
            <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
            </div>
          </div>
          <div>
            <h3 class="font-semibold text-gray-900 mb-1">Verified Properties</h3>
            <p class="text-gray-600 text-sm">Enable "Verified Only" to see properties with confirmed availability and pricing data.</p>
          </div>
        </div>
        <div class="flex gap-4">
          <div class="flex-shrink-0">
            <div class="w-10 h-10 bg-orange-100 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path>
              </svg>
            </div>
          </div>
          <div>
            <h3 class="font-semibold text-gray-900 mb-1">Bookmarkable URLs</h3>
            <p class="text-gray-600 text-sm">Your search filters are saved in the URL. Bookmark or share your search results easily.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
