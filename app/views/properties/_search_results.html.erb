<%# Search results partial - wraps in turbo-frame for instant updates %>
<turbo-frame id="search-results">
  <div class="max-w-7xl mx-auto">
    <!-- Results Header -->
    <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-6 sm:mb-8 gap-2 sm:gap-4">
      <div>
        <h2 class="text-xl sm:text-2xl md:text-3xl font-bold text-gray-900">
          <% if @neighborhood %>
            <%= @neighborhood.name %> Properties
          <% elsif params[:q].present? %>
            Results for "<%= params[:q] %>"
          <% elsif params[:check_in].present? && params[:check_out].present? %>
            Available <%= Date.parse(params[:check_in]).strftime("%b %d") %> - <%= Date.parse(params[:check_out]).strftime("%b %d, %Y") %>
          <% else %>
            Search Results
          <% end %>
        </h2>
        <p class="text-gray-600 mt-1">
          <%= number_with_delimiter(@pagy.count) %> properties found
          <% if params[:price_range].present? || params[:min_price].present? || params[:max_price].present? %>
            <span class="text-sm text-gray-500">
              &bull;
              <% if params[:price_range] == "under_2000" %>
                Under $2,000/wk
              <% elsif params[:price_range] == "2000_4000" %>
                $2,000-$4,000/wk
              <% elsif params[:price_range] == "4000_6000" %>
                $4,000-$6,000/wk
              <% elsif params[:price_range] == "6000_plus" %>
                $6,000+/wk
              <% elsif params[:min_price].present? || params[:max_price].present? %>
                <% if params[:min_price].present? && params[:max_price].present? %>
                  $<%= number_with_delimiter(params[:min_price]) %>-$<%= number_with_delimiter(params[:max_price]) %>/wk
                <% elsif params[:min_price].present? %>
                  $<%= number_with_delimiter(params[:min_price]) %>+/wk
                <% else %>
                  Up to $<%= number_with_delimiter(params[:max_price]) %>/wk
                <% end %>
              <% end %>
            </span>
          <% end %>
        </p>
      </div>
      <div class="text-gray-500">
        Showing <%= @pagy.from %>-<%= @pagy.to %> of <%= number_with_delimiter(@pagy.count) %>
      </div>
    </div>

    <% if @properties.any? %>
      <!-- Results Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4 sm:gap-6 mb-8">
        <% @properties.each do |property| %>
          <%= link_to property_path(property), class: "group", data: { turbo_frame: "_top" } do %>
            <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition-all duration-300 h-full flex flex-col">
              <div class="h-40 relative">
                <% if property.has_photos? %>
                  <img src="<%= property.primary_photo_url %>" alt="<%= property.address %>" class="w-full h-full object-cover" loading="lazy">
                <% else %>
                  <div class="h-full bg-gradient-to-br from-blue-400 via-cyan-400 to-blue-500 flex items-center justify-center">
                    <svg class="w-12 h-12 text-white/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                    </svg>
                  </div>
                <% end %>
                <% if property.is_verified %>
                  <div class="absolute top-2 right-2 bg-green-500 text-white px-2 py-0.5 rounded-full text-xs font-bold">
                    Verified
                  </div>
                <% end %>
                <% if property.has_photos? && property.photo_count > 1 %>
                  <div class="absolute bottom-2 right-2 bg-black/60 text-white px-2 py-0.5 rounded text-xs">
                    <%= property.photo_count %> photos
                  </div>
                <% end %>
              </div>
              <div class="p-4 flex-1 flex flex-col">
                <h3 class="font-bold text-gray-900 group-hover:text-blue-600 transition-colors mb-1">
                  <%= property.address %>
                </h3>
                <p class="text-gray-500 text-sm mb-2">
                  <%= property.city %>, <%= property.state %> <%= property.zip %>
                </p>
                <% if property.bedrooms.present? && property.bedrooms > 0 || property.bathrooms.present? && property.bathrooms > 0 %>
                  <div class="flex items-center gap-3 text-sm text-gray-600 mb-2">
                    <% if property.bedrooms.present? && property.bedrooms > 0 %>
                      <span><%= property.bedrooms %> bed</span>
                    <% end %>
                    <% if property.bathrooms.present? && property.bathrooms > 0 %>
                      <span><%= property.bathrooms %> bath</span>
                    <% end %>
                    <% if property.total_sleeps.present? && property.total_sleeps > 0 %>
                      <span>sleeps <%= property.total_sleeps %></span>
                    <% end %>
                  </div>
                <% end %>
                <% if property.has_pricing? %>
                  <p class="text-green-700 font-bold text-sm mb-2">
                    <%= property.price_range_display %>
                  </p>
                <% end %>
                <div class="mt-auto pt-3 border-t border-gray-100">
                  <span class="text-blue-600 font-semibold text-sm">View Details &rarr;</span>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>

      <!-- Pagination -->
      <div class="flex justify-center">
        <nav class="flex items-center gap-2">
          <% if @pagy.prev %>
            <%= link_to url_for(request.query_parameters.merge(page: @pagy.prev)),
                class: "px-4 py-2 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors",
                data: { turbo_frame: "search-results" } do %>
              <span class="flex items-center gap-1">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
                Previous
              </span>
            <% end %>
          <% end %>

          <span class="px-4 py-2 text-gray-600">
            Page <%= @pagy.page %> of <%= @pagy.pages %>
          </span>

          <% if @pagy.next %>
            <%= link_to url_for(request.query_parameters.merge(page: @pagy.next)),
                class: "px-4 py-2 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors",
                data: { turbo_frame: "search-results" } do %>
              <span class="flex items-center gap-1">
                Next
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </span>
            <% end %>
          <% end %>
        </nav>
      </div>
    <% else %>
      <!-- No Results -->
      <div class="text-center py-16">
        <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <h3 class="text-xl font-bold text-gray-900 mb-2">No properties found</h3>
        <p class="text-gray-600 mb-4">Try adjusting your search or filters</p>
        <%= link_to "Clear all filters", properties_path, class: "text-blue-600 hover:text-blue-700 font-semibold", data: { turbo_frame: "_top" } %>
      </div>
    <% end %>
  </div>
</turbo-frame>
