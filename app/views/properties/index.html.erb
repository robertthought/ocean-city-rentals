        <% Property.in_ocean_city.verified.order(Arel.sql("RANDOM()")).limit(6).each do |property| %>
          <%= link_to property_path(property),
            class: "group bg-white rounded-xl shadow-md hover:shadow-2xl transition-all duration-300 overflow-hidden border border-gray-200" do %>

            <!-- Property Image -->
            <div class="h-48 relative overflow-hidden">
              <% if property.has_photos? %>
                <img src="<%= property.primary_photo_url %>" alt="<%= property.address %>, <%= property.city %> <%= property.state %> - Ocean City NJ vacation rental" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" loading="lazy">
              <% else %>
                <div class="h-full bg-gradient-to-br from-blue-400 to-cyan-300 flex items-center justify-center">
                  <div class="absolute inset-0 opacity-20" style="background-image: url('data:image/svg+xml,%3Csvg width=\'20\' height=\'20\' viewBox=\'0 0 20 20\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cg fill=\'%23ffffff\' fill-opacity=\'1\' fill-rule=\'evenodd\'%3E%3Ccircle cx=\'3\' cy=\'3\' r=\'3\'/%3E%3Ccircle cx=\'13\' cy=\'13\' r=\'3\'/%3E%3C/g%3E%3C/svg%3E');"></div>
                  <svg class="w-16 h-16 text-white relative z-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                  </svg>
                </div>
              <% end %>

              <% if property.is_verified %>
                <div class="absolute top-4 right-4 bg-green-500 text-white px-3 py-1 rounded-full text-sm font-semibold shadow-lg">
                  Verified
                </div>
              <% end %>
              <% if property.has_photos? && property.photo_count > 1 %>
                <div class="absolute bottom-2 right-2 bg-black/60 text-white px-2 py-1 rounded text-xs">
                  <%= property.photo_count %> photos
                </div>
              <% end %>
            </div>

            <!-- Property Info -->
            <div class="p-6">
              <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors">
                <%= property.address %>
              </h3>
              <p class="text-gray-600 mb-2">
                <%= property.city %>, <%= property.state %> <%= property.zip %>
              </p>
              <% if property.bedrooms.present? && property.bedrooms > 0 || property.bathrooms.present? && property.bathrooms > 0 %>
                <div class="flex items-center gap-3 text-sm text-gray-500 mb-3">
                  <% if property.bedrooms.present? && property.bedrooms > 0 %>
                    <span><%= property.bedrooms %> bed</span>
                  <% end %>
                  <% if property.bathrooms.present? && property.bathrooms > 0 %>
                    <span><%= property.bathrooms %> bath</span>
                  <% end %>
                  <% if property.total_sleeps.present? && property.total_sleeps > 0 %>
                    <span>sleeps <%= property.total_sleeps %></span>
                  <% end %>
                </div>
              <% end %>
              <% if property.has_pricing? %>
                <p class="text-green-700 font-bold mb-3">
                  <%= property.price_range_display %>
                </p>
              <% end %>

              <div class="flex items-center justify-between pt-4 border-t border-gray-100">
                <span class="text-blue-600 font-semibold group-hover:text-blue-700">
                  View Details →
                </span>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

