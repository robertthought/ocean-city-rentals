  <div class="container mx-auto px-4 py-20 relative z-10">
    <div class="max-w-4xl mx-auto text-center">
      <!-- Main Headline -->
      <h1 class="text-5xl md:text-6xl font-bold mb-6 leading-tight">
        Find Your Perfect<br>
        <span class="text-cyan-200">Ocean City Vacation Rental</span>
      </h1>

      <p class="text-xl md:text-2xl mb-12 text-blue-100">
        Browse <%= Property.in_ocean_city.count.to_s.gsub(/(\d)(?=(\d{3})+$)/, '\1,') %>+ properties
        in Ocean City, New Jersey
      </p>

      <!-- Search Bar -->
      <div class="max-w-4xl mx-auto">
        <%= form_with url: properties_path, method: :get, class: "space-y-4" do |f| %>
          <div class="flex flex-col md:flex-row gap-4">
            <div class="flex-1">
              <%= f.text_field :q,
                value: params[:q],
                placeholder: "Search by address (e.g., 'Asbury Ave' or '123 Bay')",
                class: "w-full px-6 py-4 rounded-lg bg-white text-gray-900 text-lg focus:ring-4 focus:ring-cyan-300 focus:outline-none shadow-xl border-2 border-white placeholder-gray-500"
              %>
            </div>
            <%= f.submit "Search",
              class: "px-8 py-4 bg-cyan-400 hover:bg-cyan-300 text-blue-900 font-bold rounded-lg text-lg shadow-lg transform hover:scale-105 transition-all cursor-pointer"
            %>
          </div>

          <!-- Filters Row -->
          <div class="flex flex-wrap items-center justify-center gap-4">
            <div class="flex items-center gap-2 bg-white/20 backdrop-blur rounded-lg px-4 py-2">
              <%= f.select :neighborhood,
                options_for_select(
                  [["All Neighborhoods", ""]] + Neighborhood.all.map { |n| ["#{n.name}", n.slug] },
                  params[:neighborhood]
                ),
                {},
                class: "bg-transparent text-white font-semibold focus:outline-none cursor-pointer [&>option]:text-gray-900"
              %>
            </div>

            <div class="flex items-center gap-2 bg-white/20 backdrop-blur rounded-lg px-4 py-2">
              <%= f.select :sort,
                options_for_select(
                  [
                    ["Verified First", "verified_first"],
                    ["By Street #", "street_number"],
                    ["Newest", "newest"],
                    ["A-Z Address", "address"]
                  ],
                  params[:sort] || "verified_first"
                ),
                {},
                class: "bg-transparent text-white font-semibold focus:outline-none cursor-pointer [&>option]:text-gray-900"
              %>
            </div>

            <label class="flex items-center gap-2 bg-white/20 backdrop-blur rounded-lg px-4 py-3 cursor-pointer">
              <%= f.check_box :verified, { checked: params[:verified] == "1" }, "1", "0" %>
              <span class="text-white font-semibold">Verified Only</span>
            </label>

            <% if params[:q].present? || params[:neighborhood].present? || params[:verified].present? || params[:sort].present? %>
              <%= link_to "Clear Filters", properties_path, class: "text-cyan-200 hover:text-white underline font-semibold" %>
            <% end %>
          </div>
        <% end %>
      </div>

      <!-- Quick Stats -->
      <div class="mt-16 grid grid-cols-3 gap-8 max-w-3xl mx-auto">
        <div class="text-center">
          <div class="text-4xl font-bold mb-2"><%= Property.in_ocean_city.count.to_s.gsub(/(\d)(?=(\d{3})+$)/, '\1,') %>+</div>
          <div class="text-blue-100">Properties</div>
        </div>
        <div class="text-center">
          <div class="text-4xl font-bold mb-2"><%= Property.verified.count.to_s.gsub(/(\d)(?=(\d{3})+$)/, '\1,') %>+</div>
          <div class="text-blue-100">Verified</div>
        </div>
        <div class="text-center">
          <div class="text-4xl font-bold mb-2">24hr</div>
          <div class="text-blue-100">Response Time</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Wave Separator -->
  <div class="absolute bottom-0 left-0 w-full overflow-hidden leading-none">
    <svg class="relative block w-full h-12" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
      <path d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z" fill="#f9fafb"></path>
    </svg>
  </div>
</div>

