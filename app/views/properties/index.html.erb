<% content_for :schema do %>
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "Ocean City NJ Vacation Rentals",
  "description": "Browse <%= Property.in_ocean_city.count %>+ vacation rental properties in Ocean City, New Jersey. Find beach houses, condos, and family rentals.",
  "url": "https://ocnjweeklyrentals.com/properties",
  "breadcrumb": {
    "@type": "BreadcrumbList",
    "itemListElement": [
      { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://ocnjweeklyrentals.com" },
      { "@type": "ListItem", "position": 2, "name": "Properties" }
    ]
  },
  "mainEntity": {
    "@type": "ItemList",
    "name": "Ocean City Vacation Rentals",
    "numberOfItems": <%= Property.in_ocean_city.count %>,
    "itemListElement": [
      <% Property.in_ocean_city.verified.order(Arel.sql("RANDOM()")).limit(6).each_with_index do |property, index| %>
      {
        "@type": "ListItem",
        "position": <%= index + 1 %>,
        "item": {
          "@type": "LodgingBusiness",
          "name": "<%= j property.address %>",
          "address": {
            "@type": "PostalAddress",
            "streetAddress": "<%= j property.address %>",
            "addressLocality": "<%= j property.city %>",
            "addressRegion": "<%= j property.state %>",
            "postalCode": "<%= j property.zip %>",
            "addressCountry": "US"
          },
          "url": "<%= property_url(property) %>"
        }
      }<%= index < 5 ? ',' : '' %>
      <% end %>
    ]
  }
}
</script>
<% end %>

<!-- Hero Section -->
<div class="relative text-white overflow-hidden min-h-[500px] sm:min-h-[600px]" style="background-image: url('/hero-beach.jpg'); background-size: cover; background-position: center;">
  <!-- Dark Overlay -->
  <div class="absolute inset-0 bg-gradient-to-b from-blue-900/70 via-blue-800/60 to-blue-900/80"></div>

  <div class="container mx-auto px-4 py-12 sm:py-16 md:py-20 relative z-10">
    <div class="max-w-4xl mx-auto text-center">
      <!-- Main Headline -->
      <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold mb-4 sm:mb-6 leading-tight">
        Find Your Perfect<br>
        <span class="text-cyan-200">Ocean City Vacation Rental</span>
      </h1>

      <p class="text-lg sm:text-xl md:text-2xl mb-8 sm:mb-12 text-blue-100">
        Browse <%= Property.in_ocean_city.count.to_s.gsub(/(\d)(?=(\d{3})+$)/, '\1,') %>+ properties
        in Ocean City, New Jersey
      </p>

      <!-- Search Bar -->
      <div class="max-w-4xl mx-auto">
        <%= render "search_form", expanded: false %>
      </div>

      <!-- Quick Stats -->
      <div class="mt-10 sm:mt-16 grid grid-cols-3 gap-4 sm:gap-8 max-w-3xl mx-auto">
        <div class="text-center">
          <div class="text-2xl sm:text-3xl md:text-4xl font-bold mb-1 sm:mb-2"><%= Property.in_ocean_city.count.to_s.gsub(/(\d)(?=(\d{3})+$)/, '\1,') %>+</div>
