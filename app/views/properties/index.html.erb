<!-- Featured Properties Preview -->
<div class="bg-white py-12 sm:py-16 md:py-20">
  <div class="container mx-auto px-4">
    <div class="max-w-7xl mx-auto">
      <div class="flex flex-col sm:flex-row justify-between items-start sm:items-end mb-8 sm:mb-12 gap-4">
        <div>
          <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold mb-2 sm:mb-4 text-gray-900">
            Featured Properties
